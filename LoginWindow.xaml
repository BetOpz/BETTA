<Window x:Class="BETTA.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BETTA - Login" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF2D2D30">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Login Form -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="BETTA" FontSize="32" FontWeight="Bold" Foreground="#FF007ACC"/>
            <TextBlock Text=" - Betfair Login" FontSize="18" VerticalAlignment="Bottom" Foreground="White" Margin="5,0,0,5"/>
        </StackPanel>

        <!-- Login Form -->
        <StackPanel Grid.Row="1" MaxWidth="350" VerticalAlignment="Top">
            <TextBlock Text="Username:" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Height="35" Padding="10,8" 
                     FontSize="14" Margin="0,0,0,15"
                     Background="#FF3F3F46" Foreground="White" BorderBrush="#FF007ACC"/>

            <TextBlock Text="Password:" Foreground="White" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="35" Padding="10,8" 
                         FontSize="14" Margin="0,0,0,15"
                         Background="#FF3F3F46" Foreground="White" BorderBrush="#FF007ACC"/>

            <TextBlock Text="Application Key:" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="AppKeyTextBox" Height="35" Padding="10,8" 
                     FontSize="14" Margin="0,0,0,20"
                     Background="#FF3F3F46" Foreground="White" BorderBrush="#FF007ACC"/>

            <CheckBox x:Name="RememberCredentialsCheckBox" 
                      Content="Remember credentials" Foreground="White" 
                      IsChecked="True" Margin="0,0,0,20"/>

            <Button x:Name="LoginButton" Content="Login" Height="40" FontSize="16" FontWeight="Bold"
                    Background="#FF007ACC" Foreground="White" BorderThickness="0" 
                    Click="LoginButton_Click" Margin="0,0,0,10"/>

            <ProgressBar x:Name="LoginProgressBar" Height="4" Margin="0,10,0,10" 
                         Background="#FF3F3F46" Foreground="#FF007ACC" 
                         Visibility="Collapsed" IsIndeterminate="True"/>

            <TextBlock x:Name="StatusTextBlock" Text="" FontSize="12" 
                       HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="LightGreen"/>
        </StackPanel>

        <!-- Footer -->
        <TextBlock Grid.Row="2" Text="Ensure you have a valid Betfair account and application key" 
                   FontSize="11" Foreground="#FF999999" HorizontalAlignment="Center" 
                   TextWrapping="Wrap" Margin="0,20,0,0"/>
    </Grid>
</Window>
