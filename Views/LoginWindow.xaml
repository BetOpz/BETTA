<Window x:Class="BETTA.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BETTA Login"
        Height="350"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8F8F8"
        FontFamily="Segoe UI">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Logo -->
        <Image Grid.Row="0" Grid.ColumnSpan="2" Height="80"
               Source="Assets/logo.png"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

        <!-- Username -->
        <TextBlock Text="Username:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtUsername"
                 Grid.Row="1" Grid.Column="1"
                 Width="300"
                 Margin="10,0,0,0"/>

        <!-- Password -->
        <TextBlock Text="Password:" Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"/>
        <PasswordBox x:Name="txtPassword"
                     Grid.Row="2" Grid.Column="1"
                     Width="300"
                     Margin="10,10,0,0"/>

        <!-- AppKey -->
        <TextBlock Text="AppKey:" Grid.Row="3" Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"/>
        <TextBox x:Name="txtAppKey"
                 Grid.Row="3" Grid.Column="1"
                 Width="300"
                 Margin="10,10,0,0"/>

        <!-- Login Button -->
        <Button x:Name="btnLogin"
                Content="Login"
                Grid.Row="4" Grid.Column="1"
                Width="120"
                HorizontalAlignment="Left"
                Margin="10,20,0,0"
                Padding="10,5"
                Background="#007ACC"
                Foreground="White"
                Click="LoginButton_Click"/>

        <!-- Status Message -->
        <TextBlock x:Name="txtStatus"
                   Grid.Row="4" Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Margin="0,60,0,0"
                   Style="{StaticResource StatusText}"/>
    </Grid>
</Window>
